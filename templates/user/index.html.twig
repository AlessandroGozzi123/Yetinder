{% extends 'base.html.twig' %}

{% block body %}

    <div class="container text-center" style="padding-top: 5rem;">
        <h1>Domovská stránka</h1>
        <p class="fs-2">10 nejlépe hodnocených Yeti</p>
        <table class="table table-hover" align="center">
        <tr>
            <th>Jméno</th>
            <th>Bydliště</th>
            <th>Věk</th>
            <th>Výška</th>
            <th>Hodnocení</th>
        </tr>
        {% for yeti in yetipole|sort((a, b) => a.Hodnoceni < b.Hodnoceni)|slice(0, 10) %}
        <tr>
            <td>{{ yeti.getName() }}</td>
            <td>{{ yeti.getBydliste() }}</td>
            <td>{{ yeti.getVek() }}</td>
            <td>{{ yeti.getVyska() }}</td>
            <td>{{ yeti.getHodnoceni() }}</td>
        </tr>
        {% endfor %}
        </table>
    </div>

{% endblock %}